<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergiogeek7.appiris.AnalysisRequest">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/current_state"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_historico" />


        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_state"
            android:layout_toEndOf="@+id/thumbnail"
            android:textColor="@color/title"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="this" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label"
            android:layout_toEndOf="@+id/thumbnail"
            android:textSize="16sp"
            tools:text="is" />

    </RelativeLayout>


    <Button
        android:id="@+id/show_iris"
        android:layout_width="150dp"
        android:onClick="goToShowIris"
        android:layout_height="105dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/analysis_request_buttton"
        android:drawableTop="@drawable/ic_visualizar"
        android:text="@string/show_iris"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row" />

    <Button
        android:id="@+id/medical_history"
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:layout_marginEnd="24dp"
        android:onClick="goToMedicalHistory"
        android:background="@drawable/analysis_request_buttton"
        android:drawableTop="@drawable/ic_antecedentes"
        android:text="@string/medical_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row" />


    <Button
        android:id="@+id/add_results"
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:onClick="goToResults"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/analysis_request_buttton"
        android:drawableTop="@drawable/ic_resultados"
        android:text="@string/add_results"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_iris" />

    <Button
        android:id="@+id/state"
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/analysis_request_buttton"
        android:drawableTop="@drawable/ic_resultados"
        android:text="@string/state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/medical_history" />

</android.support.constraint.ConstraintLayout>
